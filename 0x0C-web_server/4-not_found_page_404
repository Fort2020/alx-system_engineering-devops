# This Puppet script installs nginx web server
# Install the nginx package if it's not already installed
# Run the command to update the system and install nginx

> sudo apt-get update
> sudo apt-get -y install nginx

# Create a basic HTML file to verify that nginx is working
Run > echo "Hello World!" | sudo tee /var/www/html/index.html

# Configure nginx to redirect or redirect_me to a specific website
exec {'redirect':
Run > sudo sed -i "s/listen 80 default_server;/listen 80 default_server;\\n\\tlocation \/redirect_me {\\n\\t\\treturn 301 https:\/\/https://github.com/besthor\/;\\n\\t}/" /etc/nginx/sites-available/default

# Restart nginx to apply the changes
Run > sudo service nginx restart
